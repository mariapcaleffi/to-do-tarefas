generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "file:./dev.db"
}

enum Prioridade {
  BAIXA
  MEDIA
  ALTA
}

enum Status {
  AFAZER
  FAZENDO
  PRONTO
}

model Usuario {
  id      Int      @id @default(autoincrement())
  nome    String
  email   String   @unique
  tarefas Tarefa[]
}

model Tarefa {
  id           Int       @id @default(autoincrement())
  usuarioId    Int
  descricao    String
  setor       String
  prioridade   Prioridade
  dataCadastro DateTime  @default(now())
  status       Status    @default(AFAZER)

  usuario Usuario @relation(fields: [usuarioId], references: [id])
}
